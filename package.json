{
  "name": "global-advertising-platform",
  "version": "2.0.0",
  "description": "World Map Advertising Platform with PayPal Payment Integration",
  "scripts": {
    "start": "powershell -ExecutionPolicy Bypass -File start-server.ps1",
    "dev": "concurrently --names \"BACKEND,FRONTEND\" --prefix-colors \"blue,green\" \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "vercel dev",
    "dev:backend": "cd backend && npm start",
    "dev:backend:watch": "cd backend && npm run dev",
    "build": "echo 'No build step required'",
    "predeploy": "node scripts/update-all-folders-mtime.js",
    "deploy": "vercel --prod",
    "update-folders": "node scripts/update-all-folders-mtime.js",
    "watch-folders": "node scripts/update-folder-mtime.js",
    "watch-folders:js": "node scripts/update-folder-mtime.js js",
    "watch-folders:docs": "node scripts/update-folder-mtime.js docs"
  },
  "dependencies": {
    "firebase": "^10.7.1",
    "firebase-admin": "^12.0.0"
  },
  "devDependencies": {
    "chokidar": "^3.5.3",
    "concurrently": "^9.2.1"
  },
  "engines": {
    "node": ">=18.x"
  }
}

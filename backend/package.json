{
  "name": "worldad-backend",
  "version": "1.0.0",
  "description": "WorldAd Backend API Server - Postgres + Redis + WebSocket",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "dev": "node --watch server.js",
    "start": "node server.js",
    "migrate": "node scripts/migrate.js",
    "seed": "node scripts/seed.js",
    "migrate-firestore": "node scripts/migrate-from-firestore.js",
    "check-migration": "node scripts/check-migration-prerequisites.js",

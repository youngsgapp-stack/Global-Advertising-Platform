{
  "buildCommand": "",
  "outputDirectory": ".",
  "crons": [
    // 주의: Vercel 무료 티어는 하루 1회만 실행 가능
    // 실제로는 GitHub Actions를 사용하여 더 자주 실행합니다
    // GitHub Actions: .github/workflows/calculate-rankings.yml (15분 주기)
    // GitHub Actions: .github/workflows/end-auctions.yml (1분 주기)
    {
      "path": "/api/cron/calculate-rankings",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/cron/end-auctions",
      "schedule": "0 0 * * *"
    }
  ],
  "rewrites": [
    {
      "source": "/data/(.*)",
      "destination": "/data/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" },
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" }
      ]
    },
    {
      "source": "/data/(.*).geojson",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Content-Type", "value": "application/geo+json" },
        { "key": "Cache-Control", "value": "public, max-age=3600" }
      ]
    },
    {
      "source": "/(.*).js",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" },
        { "key": "X-Content-Type-Options", "value": "nosniff" }
      ]
    },
    {
      "source": "/(.*).css",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" },
        { "key": "X-Content-Type-Options", "value": "nosniff" }
      ]
    },
    {
      "source": "/(.*).(png|jpg|jpeg|svg|webp)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=2592000" },
        { "key": "X-Content-Type-Options", "value": "nosniff" }
      ]
    },
    {
      "source": "/(.*).html",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=300, must-revalidate" }
      ]
    },
    {
      "source": "/api/rankings/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=300" },
        { "key": "Content-Type", "value": "application/json" }
      ]
    },
    {
      "source": "/api/stats/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=300" },
        { "key": "Content-Type", "value": "application/json" }
      ]
    },
    {
      "source": "/api/rankings/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=900" },
        { "key": "Content-Type", "value": "application/json" }
      ]
    },
    {
      "source": "/(.*).(jpg|jpeg|png|gif|webp|svg)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=2592000" }
      ]
    },
    {
      "source": "/api/cron/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" }
      ]
    }
  ]
}

